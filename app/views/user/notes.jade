extends ../shared/template

block content
  h1#testo EverN&#11041;de
  //h1#testoUser= user.name
  //.profilePic(style='background-image:url("'+user.photo+'")')

  form(action='/notes', method='post')
    fieldset#newNote
      legend New Note
      .row
        .small-6.columns
          input(name='lat', type='text')#lat
          input(name='lng', type='text')#lng
          label Title
          input#noteTitle(name='title', type='text', autofocus=true)
        .small-6.columns
          label Date Created
          input(name='dateCreated', type='date')
      .row
        .small-8.columns
          label Tags
          input(name='tags', type='text')
        .small-4.columns
          &nbsp;
      .row
        .small-12.columns
          label Body
          textarea(rows=21, name='body')
      .row
        .small-12.columns
          button.custom_button#create Create
      #closeNewNote close[x]
  if notes
    #notesWrap
      each note in notes
        .picture(value= note._id)
          .title: a(href='#' + note._id)= note.title.slice(0, 12)
          .date= moment(note.dateCreated).format('MMMM Do, YYYY')
          .tags= note.tags
          .sample #{note.sample}...
  #noteWrap
    #title
    #date
    hr#line
    //#body
    #tags
    //#form
    #picture
    #fullNote
    #update_note
    #searchPanel
      #closeSP close[x]
      .custom_button#sort Sort
        .custom_button#dateS By Date
        .custom_button#alpha By Name
      .custom_button#searchP Search
        input#srcName(type='text', placeholder='search by name...')
        .custom_button#srcNB Search
        input#srcDate(type='date')
        .custom_button#srcDB Search
        input#srcTags(type='text', placeholder='search by tags...')
        .custom_button#srcTB Search
  #searchResult
    #result

  .bg_val(value=user.bg)

